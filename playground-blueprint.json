{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/",
  "login": true,
  "preferredVersions": {
    "php": "8.2",
    "wp": "6.7"
  },
  "steps": [
    {
      "step": "installTheme",
      "themeZipFile": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/nexavoab/seniorbolaget-wp/main/seniorbolaget-theme.zip"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "wp-cli",
      "command": "wp option update blogname Seniorbolaget"
    },
    {
      "step": "wp-cli",
      "command": "wp rewrite structure /%postname%/ --hard"
    }
  ]
}
